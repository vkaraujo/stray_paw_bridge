<div class="flex space-x-4 mt-6">
  <%= link_to t("pets.owner_actions.edit"), edit_pet_path(pet), class: "text-blue-600 hover:underline font-medium" %>

  <%= button_to t("pets.owner_actions.delete"), pet_path(pet),
        method: :delete,
        data: { confirm: t("pets.owner_actions.confirm") },
        class: "text-red-600 hover:underline font-medium bg-transparent border-none p-0" %>

  <% if pet.available? || pet.pending? %>
    <%= button_to t("pets.conclude_adoption.button"),
                  conclude_adoption_pet_path(pet),
                  method: :patch,
                  data: { turbo_confirm: t("pets.conclude_adoption.confirm") },
                  class: "text-green-600 hover:underline text-sm" %>
  <% end %>

  <% if request.approved? %>
    <%= link_to "Open Chat", adoption_request_messages_path(request), class: "text-blue-600 hover:underline" %>
  <% end %>
</div>
