<h2 class="text-2xl font-semibold mb-6"><%= t("pets.form.title") %></h2>

<%= form_with model: @pet, local: true, html: { multipart: true }, class: "space-y-6 bg-white p-6 rounded shadow max-w-2xl mx-auto" do |f| %>
  <%= render "shared/error_messages", resource: @pet %>

  <div class="flex flex-col">
    <%= f.label :name, t("pets.form.name"), class: "text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "p-2 border rounded-md" %>
  </div>

  <div class="flex flex-col">
    <%= f.label :description, t("pets.form.description"), class: "text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, class: "p-2 border rounded-md" %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div class="flex flex-col">
      <%= f.label :species, t("pets.form.species"), class: "text-sm font-medium text-gray-700" %>
      <%= f.select :species, Pet.species.keys.map { |s| [s.titleize, s] }, {}, class: "p-2 border rounded-md" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :status, t("pets.form.status"), class: "text-sm font-medium text-gray-700" %>
      <%= f.select :status, Pet.statuses.keys.map { |s| [s.titleize, s] }, {}, class: "p-2 border rounded-md" %>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div class="flex flex-col">
      <%= f.label :age, t("pets.form.age"), class: "text-sm font-medium text-gray-700" %>
      <%= f.number_field :age, class: "p-2 border rounded-md", min: 0 %>
    </div>

    <div class="flex flex-col">
      <%= f.label :size, t("pets.form.size"), class: "text-sm font-medium text-gray-700" %>
      <%= f.select :size, ['Small', 'Medium', 'Large'], {}, class: "p-2 border rounded-md" %>
    </div>
  </div>

  <div class="flex flex-col">
    <%= f.label :address, t("pets.form.address"), class: "text-sm font-medium text-gray-700" %>
    <%= f.text_field :address, class: "p-2 border rounded-md" %>
  </div>

  <div class="flex flex-col">
    <%= f.label :photo, t("pets.form.photo"), class: "text-sm font-medium text-gray-700" %>
    <%= f.file_field :photo, class: "p-2 border rounded-md" %>
  </div>

  <div>
    <%= f.submit t("pets.form.submit"), class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
  </div>
<% end %>
