<%= form_with url: pets_path, method: :get, local: true, class: "mb-6 space-y-4" do %>
  <div class="flex flex-wrap gap-4 items-end">
    <div class="flex flex-col">
      <%= label_tag :species, t("pets.filters.species"), class: "text-sm font-medium text-gray-700" %>
      <%= select_tag :species, options_for_select(Pet.species.keys.map { |s| [s.titleize, s] }, params[:species]),
                     include_blank: t("pets.filters.all"),
                     class: "p-2 border rounded-md" %>
    </div>

    <div class="flex flex-col">
      <%= label_tag :size, t("pets.filters.size"), class: "text-sm font-medium text-gray-700" %>
      <%= select_tag :size, options_for_select(["Small", "Medium", "Large"], params[:size]),
                     include_blank: t("pets.filters.all"),
                     class: "p-2 border rounded-md" %>
    </div>

    <div class="flex flex-col">
      <%= label_tag :location, t("pets.filters.location"), class: "text-sm font-medium text-gray-700" %>
      <%= text_field_tag :location, params[:location], placeholder: t("pets.filters.location_placeholder"),
                         class: "p-2 border rounded-md" %>
    </div>

    <div class="flex flex-col">
      <%= label_tag :radius, t("pets.filters.radius"), class: "text-sm font-medium text-gray-700" %>
      <%= number_field_tag :radius, params[:radius] || 20, class: "p-2 border rounded-md", min: 1 %>
    </div>

    <div>
      <%= submit_tag t("pets.filters.submit"), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    </div>
  </div>
<% end %>
