<div>
  <h2 class="text-xl font-semibold mb-4">Notifications</h2>

  <% if notifications.any? %>
    <ul class="space-y-2">
      <% notifications.each do |note| %>
        <li class="p-3 bg-<%= note.read? ? 'gray-100' : 'yellow-50' %> border rounded flex justify-between items-center">
          <p class="text-sm text-gray-800"><%= note.message %></p>

          <% unless note.read? %>
            <%= button_to "Mark as Read", mark_as_read_notification_path(note),
                  method: :patch,
                  class: "text-xs text-blue-600 hover:underline ml-4" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-500">You donâ€™t have any notifications yet.</p>
  <% end %>
</div>
