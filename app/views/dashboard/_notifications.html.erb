<div>
  <h2 class="text-xl font-semibold mb-4"><%= t("dashboard.notifications.title") %></h2>

  <% if notifications.any? %>
    <ul class="space-y-2">
      <% notifications.each do |note| %>
        <li class="p-3 <%= note.read? ? 'bg-gray-100' : 'bg-yellow-50' %> border rounded flex justify-between items-center">
          <p class="text-sm text-gray-800"><%= note.message %></p>

          <% unless note.read? %>
            <%= button_to t("dashboard.notifications.mark_as_read"), mark_as_read_notification_path(note),
                  method: :patch,
                  class: "text-xs text-blue-600 hover:underline ml-4" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-500"><%= t("dashboard.notifications.none") %></p>
  <% end %>
</div>
