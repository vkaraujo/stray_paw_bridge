<div>
  <h2 class="text-xl font-semibold mb-4"><%= t("dashboard.my_adoptions.title") %></h2>

  <% pending_requests = requests.select(&:pending?) %>
  <% past_requests = requests.reject(&:pending?) %>

  <% if requests.any? %>
    <% if pending_requests.any? %>
      <h3 class="text-md font-semibold text-yellow-600 mb-2"><%= t("dashboard.my_adoptions.pending_title") %></h3>
      <ul class="space-y-4 mb-6">
        <% pending_requests.each do |request| %>
          <li class="border rounded p-4 bg-white shadow-sm">
            <div class="flex justify-between items-center">
              <div>
                <h4 class="font-bold">
                  <%= link_to request.pet.name, pet_path(request.pet), class: "text-blue-600 hover:underline" %>
                </h4>
                <p class="text-sm text-yellow-600 font-semibold"><%= t("dashboard.my_adoptions.pending_status") %></p>
                <% if request.message.present? %>
                  <p class="text-gray-500 text-sm mt-1 italic">"<%= request.message %>"</p>
                <% end %>
              </div>
              <%= button_to t("dashboard.my_adoptions.cancel"), cancel_adoption_request_path(request),
                    method: :patch, class: "text-red-600 hover:underline text-sm" %>
            </div>
          </li>
        <% end %>
      </ul>
    <% end %>

    <% if past_requests.any? %>
      <h3 class="text-md font-semibold text-gray-700 mb-2"><%= t("dashboard.my_adoptions.past_title") %></h3>
      <ul class="space-y-4">
        <% past_requests.each do |request| %>
          <li class="border rounded p-4 bg-gray-50 shadow-sm">
            <div>
              <h4 class="font-bold">
                <%= link_to request.pet.name, pet_path(request.pet), class: "text-blue-600 hover:underline" %>
              </h4>
              <p class="text-sm <%= {
                approved: 'text-green-600',
                rejected: 'text-red-600',
                cancelled: 'text-gray-500'
              }[request.status.to_sym] %> font-semibold">
                <%= t("dashboard.my_adoptions.statuses.#{request.status}") %>
              </p>
              <% if request.message.present? %>
                <p class="text-gray-500 text-sm mt-1 italic">"<%= request.message %>"</p>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    <% end %>
  <% else %>
    <p class="text-gray-500"><%= t("dashboard.my_adoptions.none") %></p>
  <% end %>
</div>
